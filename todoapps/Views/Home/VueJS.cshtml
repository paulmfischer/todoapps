@{
    ViewData["Title"] = "Vue JS";
}

<h3>@ViewData["Title"]</h3>

<div id="app">
    <div class="row pb-3">
        <div class="col">
            <form>
                <div class="row">
                    <div class="col-6">
                        <label for="item">To do:</label>
                        <input id="item" type="text" placeholder="To do" v-model="newTask" />
                    </div>
                    <div class="col-2">
                        <button id="submit" type="submit" v-on:click="addItem" class="btn btn-primary btn-sm">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <span v-if="isTasksEmpty">No Tasks currently, add one from the form above.</span>
            <div v-else>
                <ul class="no-bullets">
                    <li v-for="task in tasks" class="pb-3">
                        <todo-item v-bind:todo="task" v-on:remove-todo="removeItem"></todo-item>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section scripts  {
    <environment include="Development">
        <script src="~/lib/vue/vue.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/vue@2.6.7/dist/vue.js"></script>
    </environment>

    <script src="~/js/vue.js" asp-append-version="true"></script>
}
